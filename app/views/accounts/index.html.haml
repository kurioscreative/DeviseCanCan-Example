%h1 Listing accounts
%table
  %tr
    %th Email
    %th Roles
  - @accounts.each do |account|
    %tr
      %td= account.email
      %td= account.role.humanize
      %td
        = link_to 'Show', account_path(account)
        = link_to 'Edit', edit_account_path(account)
        = link_to 'Destroy', account_path(account), :confirm => 'Are you sure?', :method => :delete
%br
- if can? :manage, User
  = link_to 'New Article', new_account_path 
